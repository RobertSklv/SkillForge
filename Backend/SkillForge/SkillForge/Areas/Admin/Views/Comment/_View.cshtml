@using SkillForge.Models.Database

@model Comment

@{
    Layout = "_FieldsetLayout";
    ViewData["Legend"] = "View";
}

<div class="row mb-4">
    <div class="col-12 col-lg-4">
        <span>Article:</span>
    </div>
    <div class="col-12 col-lg-8">
        <a href="/Admin/Article/View/@(Model.ArticleId)">@Model.Article!.Title</a>
    </div>
</div>

<div class="row mb-4">
    <div class="col-12 col-lg-4">
        <span>Author:</span>
    </div>
    <div class="col-12 col-lg-8">
        <span>@Model.User?.Name</span>
    </div>
</div>

<div class="row mb-4">
    <div class="col-12 col-lg-4">
        <span>Content:</span>
    </div>
    <div class="col-12 col-lg-8">
        <div class="card p-3">
            @Html.Raw(@Model.Content)
        </div>
    </div>
</div>