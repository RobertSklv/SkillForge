@using SkillForge.Models.Database

@model Article

@{
    Layout = "_FieldsetLayout";
    ViewData["Legend"] = "Preview";
}

<partial name="_View" model="@Model" />

<form asp-action="Approve">
    <input type="hidden" asp-for="@Model.Id" />

    <button type="submit" class="btn btn-lg btn-primary mt-4 px-4">Approve</button>
</form>