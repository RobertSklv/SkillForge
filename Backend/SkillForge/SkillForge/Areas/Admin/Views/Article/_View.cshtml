@using SkillForge.Models.Database

@model Article

<div class="row mb-4">
    <div class="col-12 col-lg-4">
        <span>Author:</span>
    </div>
    <div class="col-12 col-lg-8">
        <span>@Model.Author?.Name</span>
    </div>
</div>

<div class="row mb-4">
    <div class="col-12 col-lg-4">
        <span>Title:</span>
    </div>
    <div class="col-12 col-lg-8">
        <span>@Model.Title</span>
    </div>
</div>

<div class="row mb-4">
    <div class="col-12 col-lg-4">
        <span>Cover image:</span>
    </div>
    <div class="col-12 col-lg-8">
        @if (Model.Image != null)
        {
            <img src="@Model.Image" alt="Cover image" class="w-50" />
        }
        else
        {
            <span>No image.</span>
        }
    </div>
</div>

<div class="row mb-4">
    <div class="col-12 col-lg-4">
        <span>Tags:</span>
    </div>
    <div class="col-12 col-lg-8">
        @if (Model.Tags != null)
        {
            <span>@(string.Join(", ", Model.Tags.ConvertAll(t => t.Tag.Name)))</span>
        }
        else
        {
            <span>No image.</span>
        }
    </div>
</div>

<div class="row mb-4">
    <div class="col-12 col-lg-4">
        <span>Content:</span>
    </div>
    <div class="col-12 col-lg-8">
        <div class="card p-3 rich-text-content">
            @Html.Raw(@Model.Content)
        </div>
    </div>
</div>

<style>
    .rich-text-content pre {
        background-color: #23241f;
        color: #f8f8f2;
        margin-bottom: 5px;
        margin-top: 5px;
        padding: 5px 10px;
        border-radius: 3px;
    }

    .rich-text-content img {
        max-width: 100%;
    }
</style>