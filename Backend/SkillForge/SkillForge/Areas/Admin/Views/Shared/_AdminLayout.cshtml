@{
    Layout = "_Layout";
}

@section ScriptsHead
{
    <script src="~/js/Table/table.js"></script>
    @await RenderSectionAsync("ScriptsHead", required: false)
}

<div id="main-content" class="container-fluid d-flex">
    <div class="row w-100 min-vh-100">
        <div class="col-2 ps-0">
            <nav class="navbar navbar-expand-lg bg-body-tertiary actions align-items-start h-100 shadow-lg">
                <div class="d-flex flex-column justify-content-between w-100 h-100">
                    <div class="container-fluid flex-column align-items-start w-100">
                        <a class="navbar-brand ms-2 fs-4" href="/Admin">Dashboard</a>
                        <div class="collapse navbar-collapse flex-column align-items-start w-100" id="navbarSupportedContent">
                            <ul class="navbar-nav me-auto mb-2 mb-lg-0 flex-column align-items-start w-100">
                                @await Component.InvokeAsync("AdminNavigation")
                                @await RenderSectionAsync("NavigationLinks", required: false)
                            </ul>
                        </div>
                    </div>

                    @await Component.InvokeAsync("AdminUserDropdown")
                </div>
            </nav>
        </div>
        <div class="col-10">
            <div class="row flex-column justify-content-between h-100">
                <div class="col-12">
                    <div class="mt-3 mx-5">
                        @RenderBody()
                    </div>
                </div>
                <div class="col-12">

                    <footer class="border-top footer text-muted p-3">
                        <div class="container">
                            &copy; 2025 - SkillForge
                        </div>
                    </footer>
                </div>
            </div>

        </div>
    </div>
</div>

@section Styles
{
    <link rel="stylesheet" href="~/css/Table.css"></link>
    @await RenderSectionAsync("Styles", required: false)
}

@section Scripts
{
    @await RenderSectionAsync("Scripts", required: false)
}