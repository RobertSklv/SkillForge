@using SkillForge.Areas.Admin.Models

@model AdminUserDropdown

<div class="btn-group dropup ms-2 w-100">
    <button type="button"
            class="bg-transparent border-0 dropdown-toggle w-100 fs-5 text-start"
            data-bs-toggle="dropdown"
            aria-expanded="false">
        <i class="bi bi-person-circle me-1"></i>
        <span>@Model.Username</span>
    </button>
    <ul class="dropdown-menu">
        <li>
            <a class="dropdown-item p-2" asp-controller="AdminUser" asp-action="EditCurrent">
                <span>
                    <i class="bi bi-pencil-square me-2"></i>
                    Edit
                </span>
            </a>
        </li>
        <li>
            <form asp-controller="Login" asp-action="Logout" method="post" class="w-100">
                <button class="dropdown-item p-2">
                    <i class="bi bi-box-arrow-right me-2"></i>
                    Logout
                </button>
            </form>
        </li>
    </ul>
</div>