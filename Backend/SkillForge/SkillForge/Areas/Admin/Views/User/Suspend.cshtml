@using SkillForge.Areas.Admin.Models.User
@using SkillForge.Models.Database

@model SuspendUserFormData

@{
    Layout = "_AdminPageLayout";
    ViewData["PageHeading"] = "Suspend User #" + Model.UserId;
    ViewData["Title"] = ViewData["PageHeading"];
}

<form asp-action="SuspendUser" method="post">
    <input type="hidden" asp-for="@Model.UserId" />

    <div class="row">
        <div class="col-6">
            <div class="row mb-4">
                <div class="col-12 col-lg-6">
                    <label asp-for=@Model.Violation></label>
                </div>
                <div class="col-12 col-lg-6">
                    <select asp-for=@Model.Violation
                            asp-items="Html.GetEnumSelectList<Violation>()"
                            class="form-select d-block">
                    </select>
                    <span asp-validation-for=@Model.Violation class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="col-6">
            <div class="row mb-4">
                <div class="col-12 col-lg-6">
                    <label asp-for=@Model.DurationDays></label>
                </div>
                <div class="col-12 col-lg-6">
                    <select asp-for=@Model.DurationDays
                            class="form-select d-block">
                        <option value="1">1</option>
                        <option value="3">3</option>
                        <option value="7">7</option>
                        <option value="30">30</option>
                        <option value="180">180</option>
                    </select>
                    <span asp-validation-for=@Model.DurationDays class="text-danger"></span>
                </div>
            </div>
        </div>
    </div>

    <button type="submit" class="btn btn-lg btn-danger mt-4 px-4">Suspend</button>
</form>